                               Items="_people"
                               Chips
                               Class="mt-6"
                               SmallChips
                               Outlined
                               Color="blue-grey lighten-2"
                               Label="@T("Project`s team")"
                               ItemText="r=>r.Name"
                               ItemValue="r=>r.Name">
                        <SelectionContent Context="data">
                            <MChip Small Close
