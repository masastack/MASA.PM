                       Items="_projectEnvClusters"
                       ItemText="r=>r.EnvironmentClusterName"
                       ItemDisabled="@(r=>r.Id==_selectEnvClusterId.AsT1)"
                       ItemValue="r=>r.Id"
                       Outlined
                       Label="@T("Environment/Cluster")"
